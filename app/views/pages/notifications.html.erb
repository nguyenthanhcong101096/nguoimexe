<div id="main" class="main">
  <div class="main-content">
    <div class="container">
      <ul class="list-writer">
        <li class="list-writer__item mb-16">
          <h3 class="headline">Your Notifications</h3>
        </li>
        <% @notifications.each do |noti| %>
        <li class="list-writer__item">
          <a class="writer writer--default" href="<%= noti.url %>">
            <div class="writer__avatar"><img src="<%= noti.user_avatar_url(:medium) %>" alt="avatar"></div>
            <div class="writer__body">
              <p class="writer__name"><%= noti.user_username %><span class="writer__date"><%= noti.created_date %></span></p>
              <p class="writer__text"><%= noti.message %></p>
            </div>
            <span class="<%= noti.read ? '' : 'writer__badge' %>"></span>
          </a>
        </li>
        <% end %>
      </ul>
      <%= paginate @notifications %>
    </div>
  </div>
</div>

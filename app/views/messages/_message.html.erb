<% type = local_assigns[:type] %>
<% user = local_assigns[:user]%>

<%- if type=="right" || message.sender == user %>
<div class="messages messages--sent">
  <%- if message.attachment_data %>
  <div class="messages__thumbnail messages__thumbnail--lg">
  <img src="<%= message.attachment_data %>" alt="messages thumb" class="messages__image">
  </div>
  <%- else %>
  <p class="messages__text"><%= message.msg %></p>
  <% end %>
  <img src="<%= message.sender_avatar_url(:medium) %>" alt="messages image" class="messages__avatar">
</div>
<% else %>
<div class="messages messages--received">
  <img src="<%= message.sender_avatar_url(:medium) %>" alt="messages image" class="messages__avatar">
  <%- if message.attachment_data %>
  <div class="messages__thumbnail messages__thumbnail--lg">
  <img src="<%= message.attachment_data %>" alt="messages thumb" class="messages__image">
  </div>
  <%- else %>
  <p class="messages__text"><%= message.msg %></p>
  <% end %>
</div>
<% end %>

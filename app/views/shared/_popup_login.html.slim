      .u-font-weight.js-btn-back Trở lại
      .form
        h3.text-center Join Us as a Member!
        .js-form-phone
          .form-group
            .horizontal
              input.form-control.u-no-m type="number" id="phone" name="phone" placeholder="Nhập số điện thoại"
              button.btn-verify-phone.u-bg-red.u-text-white.text-center.js-btn-signup-step data-step="1" type="submit"
                p Gửi mã xác thực
            h5.u-text-red.mt-8.js-error-phone
            
        input.js-hold-phone type="hidden" id="hold-phone" name="hold-phone"
        
        .js-form-verify.hidden
          .form-group
            .horizontal
              input.form-control.u-no-m type="number" id="code" name="code" placeholder="Nhập mã xác nhận"
              button.btn-verify-phone.u-bg-red.u-text-white.text-center.js-btn-signup-step data-step="2" type="submit"
                p Nhập mã xác nhập
            h5.u-text-red.mt-8.js-error-code
            
        .js-form-create-user
          .form-group.hidden
              input.form-control type="text" id="address" name="address" placeholder="Nhâp địa chỉ"
              input.form-control type="text" id="username" name="username" placeholder="Nhâp username"
              input.form-control type="password" id="password" name="password" placeholder="Nhâp mật khẩu"
              h5.u-text-red.mt-8.js-error-password
              input.form-control type="password" id="password_confirmation" name="password_confirmation" placeholder="Nhâp lại mật khẩu"
              h5.u-text-red.mt-8.js-error-password_confirmation
              .u-mt-32.justify-left
                button.btn-default.u-bg-red.u-text-white.js-btn-signup-step data-step="3" type="submit" Đăng kí 

  <button class="btn--icon badge js-btn-open-dropdown" data-target="messages">
    <%= inline_svg('ico_message.svg') %>
  </button>

  <ul class="dropdown dropdown--md js-dropdown hidden" data-dropdown="messages">
    <li class="dropdown__item dropdown__header">Hộp thư (<%= count %>)</li>
    <%= render partial: 'shared/message', collection: messages %>
    <li class="dropdown__item">
      <button class="dropdown__link btn--link">XEM THÊM</button>
    </li>
  </ul>
</li>

<div class="modal-wrapper" style="display: none">
  <div class="modal">
    <div class="modal__actions">
      <ul class="link-list link-list--lg">
        <li class="link-list__item">
          <a href="#" class="link has-border is-active">Đăng Nhập</a>
        </li>
        <li class="link-list__item">
          <a href="#" class="link has-border">Đăng ký</a>
        </li>
      </ul>
      <button class="btn--icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path fill="#21252B" fill-rule="evenodd" d="M4.491 20.651a11.429 11.429 0 1 1 16.16-16.16c4.332 4.485 4.27 11.613-.139 16.021-4.408 4.409-11.536 4.47-16.02.14zm1.612-1.611A9.148 9.148 0 1 0 19.04 6.103 9.148 9.148 0 0 0 6.103 19.04zm11.314-9.703l-3.234 3.234 3.234 3.235-1.611 1.611-3.235-3.234-3.234 3.234-1.611-1.611 3.234-3.235-3.234-3.234 1.611-1.611 3.234 3.234 3.235-3.234 1.611 1.611z"/>
        </svg>
      </button>
    </div>
    
    <div class="modal__form" >
      <%= form_tag user_session_path do %>
        <div class="form-group form-group--horizontal">
          <p class="form-label">Email / SĐT</p>
          <div class="form-body">
            <%= text_field_tag :email, nil, { class: 'form-input', placeholder: 'Nhập email' } %>
          </div>
          <p class="form-hint form-text-error"></p>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label">Mật Khẩu</p>
          <div class="form-body">
            <%= password_field_tag :password, nil, { class: 'form-input', placeholder: 'Nhập mật khẩu' } %>
          </div>
          <p class="form-hint form-text-error"><%= flash[:error] %></p>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label"></p>
          <div class="form-body">
            <%= submit_tag 'Đăng nhập', {class: 'btn btn--full btn--primary' } %>
            <div class="mt-16">
              <%= link_to 'Đăng nhập bằng Google', user_google_oauth2_omniauth_authorize_path, class: 'btn btn--full btn--tertiary' %>
            </div>
            <div class="mt-16">
              <%= link_to 'Đăng nhập bằng Facebook', user_facebook_omniauth_authorize_path, class: 'btn btn--full btn--tertiary' %>
            </div>
          </div>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label"></p>
          <p class="form-body text--sm">Quên mật khẩu ? <a class="link" href="/reset_passwords/forget_password"> Bấm vào đây</a></p>
        </div>
      <% end %>

      <form >
        <div class="form-group form-group--horizontal">
          <p class="form-label">Họ Tên</p>
          <div class="form-body">
            <input class="form-input" type="text" placeholder="Được dùng để định danh">
          </div>
          <p class="form-hint form-text-error">Thông báo lỗi</p>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label">Email / SĐT</p>
          <div class="form-body">
            <input class="form-input" type="text" placeholder="Nhập email hoặc số điện thoại">
          </div>
          <p class="form-hint form-text-error">Thông báo lỗi</p>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label">Mật Khẩu</p>
          <div class="form-body">
            <input class="form-input" type="password" placeholder="Nhập mật khẩu tối thiểu 6 kí tự">
          </div>
          <p class="form-hint form-text-error">Thông báo lỗi</p>
        </div>

        <div class="form-group form-group--horizontal">
          <p class="form-label"></p>
          <div class="form-body">
            <input type="submit" value="Đăng Ký" class="btn btn--full btn--primary">
            <div class="mt-16">
              <button class="btn btn--full btn--tertiary">Đăng Ký bằng Google</button>
            </div>
            <div class="mt-16">
              <button class="btn btn--full btn--tertiary">Đăng Ký bằng Facebook</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

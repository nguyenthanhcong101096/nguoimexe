<header id="header" class="header">
  <div class="header__logo">
    <a href="/">
      <img width="74" src="<%= asset_pack_path('images/img_logo.png') %>" alt="logo">
    </a>
  </div>

  <ul class="header__links link-list">
    <li class="link-list__item">
      <a href="/" class="link has-border is-active">Mua Bán</a>
    </li>
    <li class="link-list__item">
      <a href="/community" class="link has-border">Trải nghiệm</a>
    </li>
    <li class="link-list__item">
      <a href="/blogs" class="link has-border">Tin Tức</a>
    </li>
  </ul>

  <div class="header__ultility">
    <div class="header__search-box">
      <div class="form-body">
        <%= form_tag search_posts_path, method: 'GET' do |form| %>
          <input type="text" id="q" name="q" class="form-input search-box has-icon" placeholder="Tìm Kiếm với thành phố, quận/huyện">
          <%= inline_svg('ico_search.svg') %>
        <% end %>
      </div>
    </div>
    <div class="header__actions">
      <% if user_signed_in? %>
        <ul class="header__links link-list">
          <li class="link-list__item">
            <a href="/posts/new" class="link has-border">Đăng Bài</a>
          </li>
          <%= render_notification_activity(current_user) %>
          <%= render_notification_message(current_user) %>
          <li class="link-list__item">
            <button class="btn--icon js-btn-open-user-nav">
              <img class="header__avatar" src="<%= current_user.avatar_url(:medium) %>" alt="logo">
            </button>

            <ul class="dropdown hidden js-dropdown">
              <li class="dropdown__item">
                <a href="/users/profile">
                  <%= current_user.username %>
                  <span><%= current_user.email %></span>
                </a>
              </li>
              <li class="dropdown__item">
                <a href="#">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                    <path fill="#000" fill-rule="nonzero" d="M5.6 6.4a3.2 3.2 0 1 1 0-6.4 3.2 3.2 0 0 1 0 6.4zm0 .8c1.72 0 3.36.32 4.88.872L9.6 12.8h-1L8 16H3.2l-.6-3.2h-1L.72 8.072A14.344 14.344 0 0 1 5.6 7.2zm6.648.136c1.056.144 2.072.384 3.04.736L14.4 12.8h-1l-.6 3.2H9.632l.296-1.6h1l1.32-7.064zM10.4 0a3.2 3.2 0 1 1-1.064 6.208 4.768 4.768 0 0 0 0-6.016A3.383 3.383 0 0 1 10.4 0z"/>
                  </svg>
                  Tạo nhóm
                </a>
              </li>
              <li class="dropdown__item">
                <a href="#">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                    <path fill="#495057" fill-rule="evenodd" d="M8.8 7.2H12v1.6H8.8V12H7.2V8.8H4V7.2h3.2V4h1.6v3.2zM8 16A8 8 0 1 1 8 0a8 8 0 0 1 0 16zm0-1.6A6.4 6.4 0 1 0 8 1.6a6.4 6.4 0 0 0 0 12.8z"/>
                  </svg>
                  Tạo shop
                </a>
              </li>
              <li class="dropdown__item">
                <a href="/users/sign_out">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                    <path fill="#495057" fill-rule="evenodd" d="M3.55 3.17L4.632 4.25A5.326 5.326 0 0 0 8 13.714a5.333 5.333 0 0 0 3.368-9.463L12.45 3.17a6.857 6.857 0 1 1-8.907 0h.007zM7.238 0h1.524v6.095H7.238V0z"/>
                  </svg>
                  Đăng xuất
                </a>
              </li>
            </ul>
          </li>
        </ul>
      <% else %>
        <ul class="header__links link-list">
          <li class="link-list__item">
            <a href="#" class="link has-border js-btn-open-login-modal" data-target="register-form">Đăng Kí</a>
          </li>
          <li class="link-list__item">
            <a href="#" class="link has-border js-btn-open-login-modal" data-target="login-form">Đăng Nhập</a>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</header>

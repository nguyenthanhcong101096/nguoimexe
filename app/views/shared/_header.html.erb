<header id="header" class="header">
  <div class="header__logo">
    <a href="/">
      <img width="74" src="<%= asset_pack_path('images/img_logo.png') %>" alt="logo">
    </a>
  </div>

  <ul class="list-inline header__links">
    <li class="header__link list-inline__item">
      <a href="#" class="link has-border is-active">Xe máy</a>
    </li>
    <li class="header__link list-inline__item">
      <a href="#" class="link has-border">Ô tô</a>
    </li>
    <li class="header__link list-inline__item">
      <a href="#" class="link has-border">Phương tiện khác</a>
    </li>
    <li class="header__link list-inline__item">
      <a href="#" class="link has-border">Chia sẻ</a>
    </li>
  </ul>

  <div class="header__ultility">
    <div class="header__search-box">
      <div class="form-body">
        <%= form_tag search_posts_path, method: 'GET' do |form| %>
          <input type="text" id="q" name="q" class="form-input search-box has-icon" placeholder="Tìm Kiếm với thành phố, quận/huyện">
          <%= inline_svg('ico_search.svg') %>
        <% end %>
      </div>
    </div>
    <% if user_signed_in? %>
    <div class="header__actions">
      <ul class="header__links list-inline">
        <li class="header__link list-inline__item">
          <a href="/posts/new" class="link has-border">Đăng Bài</a>
        </li>
        <%= render_notification_activity(current_user) %>
        <%= render_notification_message(current_user) %>
        <li class="header__link list-inline__item">
          <button class="btn--icon">
            <img class="header__avatar" src="<%= current_user.avatar_url(:medium) %>" alt="logo">
          </button>
        </li>
      </ul>
    </div>
    <% else %>
    <a href='/users/sign_in'>Chưa đăng nhập</a>
    <% end %>
  </div>
</header>

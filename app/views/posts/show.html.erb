<%= provide(:page_title, @post.title)%>
<%= provide(:page_description, @post.title)%>
<%= provide(:page_url, posts_url.concat("/#{@post.slug_title}"))%>
<%= provide(:page_image, @post.images[0])%>

<div id="main" class="main">
  <section class="grid-images">
    <div class="grid-image">
      <div class="grid-image__block" style="background-image: url(<%= @post.images[0] %>)">
      </div>
    </div>
    <div class="grid-image">
      <div class="grid-image__block" style="background-image: url(<%= @post.images[1] %>)">
      </div>
      <div class="grid-image__block" style="background-image: url(<%= @post.images[2] %>)">
      </div>
      <div class="grid-image__block" style="background-image: url(<%= @post.images[3] %>)">
      </div>
      <div class="grid-image__block has-more" style="background-image: url(<%= @post.images[4] %>)">
        <span class="grid-image__over">+5</span>
      </div>
    </div>
  </section>

  <section class="main-content">
    <div class="container">
      <div class="row">
        <div class="col-8">
          <div class="block">
            <p class="text--sm text--grey"><%= @post.address_sale %></p>
            <h2 class="block__headline headline--lg"><%= @post.title %></h2>

            <div class="block__actions">
              <button class="btn btn--secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
                  <path fill="currentColor" fill-rule="evenodd" d="M14.633 14.717a6.667 6.667 0 0 1-9.433 0l-4.117-4.134a.833.833 0 0 1 0-1.183l4.125-4.125a6.667 6.667 0 0 1 9.434 0L18.767 9.4a.833.833 0 0 1 0 1.183l-4.125 4.125-.009.009zm-8.25-1.184a5 5 0 0 0 7.067 0L16.983 10 13.45 6.467a5 5 0 0 0-7.067 0L2.833 10l3.542 3.533h.008zm3.534-.2a3.333 3.333 0 1 1 0-6.666 3.333 3.333 0 0 1 0 6.666zm0-1.666a1.667 1.667 0 1 0 0-3.334 1.667 1.667 0 0 0 0 3.334z"/>
                </svg>
                Bỏ Theo Dõi
              </button>
              <button class="btn btn--primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
                  <path fill="currentColor" fill-rule="evenodd" d="M1.667 12.5V4.167c0-.917.75-1.667 1.666-1.667h13.334c.92 0 1.666.746 1.666 1.667v12.5a.833.833 0 0 1-1.416.583l-3.1-3.083H3.333c-.92 0-1.666-.747-1.666-1.667zm15-8.333H3.333V12.5h10.834c.22.003.43.093.583.25l1.917 1.908V4.167z"/>
                </svg>
                Bình Luận
              </button>
              <button class="btn btn--primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
                  <path fill="currentColor" fill-rule="evenodd" d="M15.833 5.342L7.25 13.925a.833.833 0 1 1-1.167-1.183l8.567-8.575h-2.983a.833.833 0 1 1 0-1.667h5c.46 0 .833.373.833.833v5a.833.833 0 1 1-1.667 0V5.342zm-1.666 6.325a.833.833 0 1 1 1.666 0v4.166c0 .92-.746 1.667-1.666 1.667h-10c-.92 0-1.667-.746-1.667-1.667v-10c0-.916.75-1.666 1.667-1.666h4.166a.833.833 0 0 1 0 1.666H4.167v10h10v-4.166z"/>
                </svg>
                Chia Sẽ
              </button>

            </div>
          </div>

          <div class="block">
            <div class="seperator seperator--centered">
              <p class="seperator__text">Mô tả</p>
            </div>
            <div class="block__body">
              <%= @post.describe %>
            </div>
            <div class="block__actions">
              <button class="btn--link">
                Xem Thêm
                <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10">
                  <path fill="#FF6B02" fill-rule="evenodd" d="M7.219 3.1a.734.734 0 0 1 .944.066c.255.249.283.643.067.925L5.34 6.923a.734.734 0 0 1-1.013 0L1.437 4.09a.697.697 0 0 1 .066-.925.734.734 0 0 1 .945-.066l2.385 2.329L7.22 3.093V3.1z"/>
                </svg>
              </button>
            </div>
          </div>

          <div class="block">
            <div class="seperator seperator--centered">
              <p class="seperator__text">Thông Tin Chi Tiết</p>
            </div>
            <div class="block__body">
              <ul class="block__list information-list">
                <li class="information-list__item">
                  <p class="label">Hãng xe</p>
                  <p class="content">Honda</p>
                </li>
                <li class="information-list__item">
                  <p class="label">Dòng xe</p>
                  <p class="content">Air Blade</p>
                </li>
                <li class="information-list__item">
                  <p class="label">Đời Xe</p>
                  <p class="content"><%= @post.car_life %></p>
                </li>
                <li class="information-list__item">
                  <p class="label">Dung tích</p>
                  <p class="content"><%= @post.capacity %></p>
                </li>
              </ul>
              <ul class="block__list information-list">
                <li class="information-list__item">
                  <p class="label">Năm đăng ký</p>
                  <p class="content"><%= @post.year_of_registration %></p>
                </li>
                <li class="information-list__item">
                  <p class="label">Số Km đã đi</p>
                  <p class="content"><%= @post.km %> Km</p>
                </li>
                <li class="information-list__item">
                  <p class="label">Tình trạng</p>
                  <p class="content"><%= @post.status_of_vehicle %></p>
                </li>
                <li class="information-list__item">
                  <p class="label">Loại Xe</p>
                  <p class="content"><%= @post.range_of_vehicle %></p>
                </li>
              </ul>
            </div>
          </div>
          <%= render partial: 'comments', locals: { comments: @comments, post: @post } %>
        </div>

        <div class="col-4">
          <div class="box">
            <div class="box__group">
              <h3 class="headline--md"><%= @post.price %> đ</h3>
              <p class="text--sm text--grey mt-4">Có Thể Thương Lượng</p>
            </div>
            <div class="seperator box__group"></div>
            <div class="writer box__group">
              <div class="writer__avatar">
                <img src="<%= asset_url(@post.user_avatar_url(:medium)) %>" alt="avatar">
              </div>
              <div class="writer__body">
                <p class="writer__name"><%= @post.user_username %></p>
                <p class="writer__date"><%= @post.user_created_date %></p>
              </div>
            </div>
            <ul class="box__group information-list">
              <li class="information-list__item">
                <p class="label">Điện Thoại</p>
                <p class="content"><%= @post.user_phone %></p>
              </li>
              <li class="information-list__item">
                <p class="label">Email</p>
                <p class="content"><%= @post.user_email %></p>
              </li>
            </ul>
            <div class="box__group">
              <button class="btn btn--full btn--secondary">Gọi Ngay</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

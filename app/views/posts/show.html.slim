.main
  .row
    .col-5.col-sm-12
      .pb-16
        img src=asset_pack_path('images/img_demo.jpg')
    .col-7.col-sm-12
      .pb-16
        h3 = @post.title
        .pb-8.u-bg-gray.u-mt-16
          .informatio.horizontal
            img class="icon-60 radius mr-8" src=asset_url(@post.user_avatar_url(:medium))
            div
              h4.u-text-bold = @post.user_username
              .horizontal
                .btn-default.btn-border-red
                  h4.u-text-red Gọi ngay
                .btn-default
                  h4 Xem Shop
          div.u-mt-16
            h3.u-text-bold.u-text-red Chi Tiết
            h4 Thương Hiệu Trump
            h4 Năm sản xuất 2015
            h4 Vehicle Registration Certificate
            h4 244 Cống Quỳnh, Quận 1, Hồ Chí Minh
          h3.u-text-red.u-text-bold.u-mt-16 Giá: 145.000.000 VNĐ
  .describe.u-mt-16
    h3.u-text-bold Mô tả xe
    blockquote.u-mt-8 = @post.describe
  .horizontal.align-center
    h4.mr-8 Tag:
    pre = "##{@post.vehicle_kind.name}"
  .row.u-mt-32.u-bg-gray
    .col-8.col-sm-12 style="padding:16px;"
      .comments
        h3.u-text-bold Bình luận
        textarea.form-control.u-mt-32 rows="3" type="text" placeholder="Nhập bình luận của bạn..."
        .comment-body.js-comment-body.pb-16
          - @comments.each do |comment|
            = render partial: 'comment', locals: { comment: comment }
          .comment-latest.js-comment-latest
        - if @post.comments.count > 5
          .btn-default.u-text-center.u-text-red.js-btn-comment-loadmore data-post-id=@post.id data-comment-min-id=@comments.last.id Xem thêm bình luận
    .col-4.col-sm-12
      h3.u-text-bold.u-mt-16.u-mb-32.u-text-center 5 Bài mới nhất
      = render partial: 'shared/post', collection: @posts, locals: { col: 'col-6' }
      
